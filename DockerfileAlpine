FROM maven:3.5-jdk-8-alpine as builder
RUN apt-get -y update
RUN apt-get -y install default-jdk maven git
RUN git clone https://github.com/boxfuse/boxfuse-sample-java-war-hello.git
RUN cd boxfuse-sample-java-war-hello && JAVA_HOME=/usr/lib/jvm/default-java/ mvn package
RUN cp boxfuse-sample-java-war-hello/target/hello-*.war /usr/local/tomcat/webapps/


FROM alpine:3.5
WORKDIR /usr/local/tomcat/webapps
COPY --from=builder /usr/local/tomcat/webapps/

EXPOSE 8080
CMD ["/usr/local/tomcat/bin/catalina.sh", "run"]
